aws_region = "us-west-2"
resource_prefix = "dev-" # Example: change to "niko-" or "yourname-"

vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b"]
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

instance_type = "t3.medium"
key_name = "your-aws-key-pair-name" # IMPORTANT: Replace with your actual key pair name

db_instance_class = "db.t3.micro"
db_name = "hrappdb"
db_username = "hrappadmin"
db_password = "YourSecurePassword123!" # IMPORTANT: Replace with a strong, secure password. Use secrets management in production.

common_tags = {
  Project     = "team-1-hr-app"
  Environment = "development" # Can be overridden by branch logic in CI/CD
  ManagedBy   = "terraform"
  Owner       = "your-name" # Optional: Add your name or team alias
}

# Deployment flags (can be overridden by CI/CD based on branch/developer)
enable_frontend = true
enable_backend = true

# Optional: For HTTPS ALB Listener
# acm_certificate_arn = "arn:aws:acm:us-west-2:123456789012:certificate/your-certificate-id" 